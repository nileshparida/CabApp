<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="#75b3f1">


    <ImageView
        android:id="@+id/loginUserPhoto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/loginLogo"
        app:srcCompat="@drawable/userphoto" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginUserPhoto"
        android:layout_marginTop="70dp"
        android:hint="Email"
        android:background="@drawable/reg_edittext_style"/>

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/loginEmail"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/reg_edittext_style"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginPassword"
        android:layout_marginTop="90dp"
        android:textColor="#ffffff"
        android:background="@drawable/reg_btn_style"
        android:width="158dp"/>

    <ProgressBar
        android:id="@+id/loginProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loginBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/loginRegister"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text = "SIGN UP"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginBtn"
        android:layout_marginTop="5dp"/>

    <View
        android:id="@+id/loginV1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#0d2679"
        android:layout_alignParentBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#430263"
        android:layout_above="@id/loginV1"/>

</RelativeLayout>


