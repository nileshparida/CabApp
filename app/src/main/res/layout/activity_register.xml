<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#75b3f1">


    <ImageView
        android:id="@+id/regUserPhoto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/userphoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="true"/>

    <EditText
        android:id="@+id/regName"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regUserPhoto"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_style"/>

    <EditText
        android:id="@+id/regMail"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regName"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_style"/>

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regMail"
        android:layout_centerHorizontal="true"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_style"/>

    <EditText
        android:id="@+id/regPassword2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regPassword"
        android:layout_centerHorizontal="true"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_style"/>

    <Button
        android:id="@+id/regBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/regPassword2"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_style"
        android:width="158dp"/>

    <ProgressBar
        android:id="@+id/regProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/regBtn"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/regV1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#0d2679"
        android:layout_alignParentBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#430263"
        android:layout_above="@id/regV1"/>



</RelativeLayout>